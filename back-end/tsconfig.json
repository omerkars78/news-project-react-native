{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,     
    "resolveJsonModule": true,     
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",   
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                      
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
